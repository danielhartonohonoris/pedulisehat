<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('layouts/header.ejs') %>
</head>
<body id="top">
  <%- include('layouts/navbar.ejs') %>
  <main>
    <article>
      <section class="section hero" style="background-image: url('./assets/images/hero-bg.png')" aria-label="home">
        <div class="container">
    
          <div class="hero-content">
    
            <p class="hero-subtitle has-before" data-reveal="left">Pusat Makanan</p>
    
            <h1 class="headline-lg hero-title" data-reveal="left">
              Layanan Informasi 
              Cepat Dan Tepat. <br>
            </h1>
          </div>
        </div>
      </section>
    </article>
  </main>
  <div class="filter-container">
    <select id="roleFilter">
      <option value="">Semua</option>
      <option value="sayuran">Sayuran</option>
      <option value="ikan">Ikan</option>
      <option value="buah">Buah</option>
    </select>
  </div>
  <div class="box-container">
    <% todoListItems.forEach(item => { %>
      <div class="box <%= item.role %>">
        <img src="../uploads/<%= item.image %>" alt="<%= item.image %>">
        <h3><%= item.title %></h3>
        <p><%= item.description %></p>
      </div>
    <% }) %>
  </div>
  <%- include('layouts/footer.ejs') %>
  <script src="./js/script.js"></script>
  <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
  <script>
    document.getElementById('roleFilter').addEventListener('change', function() {
      const selectedRole = this.value;
      const boxes = document.querySelectorAll('.box');

      boxes.forEach(box => {
        if (selectedRole && !box.classList.contains(selectedRole)) {
          box.style.display = 'none';
        } else {
          box.style.display = 'block';
        }
      });
    });
  </script>
</body>
</html>
